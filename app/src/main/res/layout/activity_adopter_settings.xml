<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="50dp"
    android:paddingTop="100dp"
    android:paddingRight="50dp"
    tools:context=".AdopterSettingsActivity">


    <!--Adds space-->

    <TextView
        android:id="@+id/banner_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c0efd8"
        android:gravity="center"
        android:text="SETTINGS"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:text="SETTINGS" />

    <View
        android:layout_width="100dp"
        android:layout_height="20dp"/>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/lbl_saved_profiles"
            android:layout_width="135dp"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:text="Saved Profiles"
            android:textSize="18sp" />

        <!--Adds space-->
        <View
            android:layout_width="100dp"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/btn_view_saved_profiles"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:text="View"
            android:textSize="10sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/lbl_search_criteria"
            android:layout_width="135dp"
            android:layout_height="22dp"
            android:text="Edit Search Criteria"
            android:textSize="18sp" />

            <!--Adds space-->
        <View
            android:layout_width="100dp"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/btn_view_search_criteria"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:text="View"
            android:textSize="10sp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="313dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/lbl_user_info"
            android:layout_width="135dp"
            android:layout_height="22dp"
            android:text="Edit User Info"
            android:textSize="18sp" />

        <!--Adds space-->
        <View
            android:layout_width="100dp"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/btn_view_user_info"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:text="View"
            android:textSize="10sp" />
    </TableRow>

    <View
        android:layout_width="100dp"
        android:layout_height="20dp"/>

    <TextView
        android:id="@+id/lbl_search_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Distance"
        android:textSize="18sp" />

    <!--Adds space-->
    <View
        android:layout_width="100dp"
        android:layout_height="10dp"/>

    <SeekBar
        android:id="@+id/seekBar_search_distance"
        android:layout_width="320dp"
        android:layout_height="wrap_content" />

    <!--Adds space-->
    <View
        android:layout_width="100dp"
        android:layout_height="20dp"/>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="322dp"
        android:layout_height="37dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/lbl_user_type"
            android:layout_width="156dp"
            android:layout_height="match_parent"
            android:text="Change User Type"
            android:textSize="18sp" />

        <!--Adds space-->

        <Spinner
            android:id="@+id/spinner_user_type_adopter"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp" />
    </TableRow>

    <View
        android:layout_width="100dp"
        android:layout_height="68dp" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOG OUT" />

</LinearLayout>