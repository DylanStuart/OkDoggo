<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileTab2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="167dp"
            tools:layout_editor_absoluteY="266dp">

            <TextView
                android:id="@+id/lbl_history_medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical History"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/field_history_medical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical History Field"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!--Adds space-->
            <View
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lbl_history_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Behavioral History"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/field_history_behavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Behavioral History Field"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!--Adds space-->
            <View
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lbl_history_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home History"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/field_history_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home History Field"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!--Adds space-->
            <View
                android:layout_width="100dp"
                android:layout_height="10dp"
                android:layout_weight="1" />

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>